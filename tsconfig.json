{
  "include": ["src/**/*"],
  "exclude": ["**/dist"],
  "compilerOptions": {
    // modules
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // emit
    "declaration": true,
    "declarationDir": "typings",
    "declarationMap": false,
    "importHelpers": true,
    "outDir": "dist",

    // interop 
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // language & environment
    "target": "ES2022",
    "lib": ["ES2022"],


    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
