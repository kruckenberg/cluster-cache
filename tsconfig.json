{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",

    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "types",

    "allowJs": true,
    "checkJs": true,

    "target": "ES6",

    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
